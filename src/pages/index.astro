---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'
import Page from '../layouts/Page.astro'

const posts = (await getCollection('posts')).sort(
	(a, b) => a.data.priority - b.data.priority
)
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Page>
		<Header />
		<main class="mx-auto mt-2 w-3/4">
			<p class="mb-4 text-lg">
				Hi, I'm <strong>Th√©o Bourgeois</strong>, a software engineer and web developer. This website is used to show my projects and other things I'm working on.
			</p>

			<div class="space-y-4">
				<div class="space-y-2">
				<p class="font-semibold text-3xl">My Posts</p>
					<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
						{
							posts.map((post) => (
								<a class="space-y-2 text-black" href={`/posts/${post.slug}`}>
									<Image
										class="aspect-video w-full rounded-sm shadow-md transition-transform duration-300 ease-in-out hover:scale-105"
										width={200}
										height={200}
										src={post.data.image}
										alt={post.data.title}
									/>
									<div>
										<div class="flex flex-wrap items-center gap-2">
											<h4 class="cursor-pointer text-xl font-semibold text-zinc-800 hover:underline">
												{post.data.title}
											</h4>{' '}
										</div>

										<p class="text-sm">{post.data.description}</p>
									</div>
								</a>
							))
						}
					</div>
				</div>

			</div>
		</main>
		<Footer />
	</Page>
</html>
